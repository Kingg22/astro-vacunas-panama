---
import "../styles/global.css";
import DashboardNav from "../components/DashboardNav.astro";
import UserHeader from "../components/UserHeader.astro";
import { url } from "../utils/url";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <link href={url("/favicon.svg")} rel="icon" type="image/svg+xml" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <UserHeader />
    <div class="flex">
      <DashboardNav />
      <main class="flex-1 p-6">
        <slot />
      </main>
    </div>
  </body>
</html>
