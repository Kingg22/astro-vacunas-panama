---
import { Button } from "../components/ui/Button";
import { Card } from "../components/ui/Card";
import DashboardLayout from "../layouts/DashboardLayout.astro";
import { Table } from "../components/ui/Table";
---

<DashboardLayout title="Panel Principal - Sistema de Vacunación de Panamá">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-sky-800 mb-2">
      Bienvenido al Sistema de Vacunación
    </h1>
    <p class="text-gray-600">Consulta y gestiona tu historial de vacunación</p>
  </div>

  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4 mb-8">
    <Card className="border-l-4 border-l-sky-500">
      <div class="p-6 flex items-center">
        <div class="bg-sky-100 p-3 rounded-full mr-4">
          <svg
            class="h-6 w-6 text-sky-600"
            fill="none"
            height="24"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            viewBox="0 0 24 24"
            width="24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="m22 8-6 4 6 4V8Z"></path>
            <rect height="12" rx="2" width="14" x="2" y="6"></rect>
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Total de Vacunas</p>
          <h3 class="text-2xl font-bold">4</h3>
        </div>
      </div>
    </Card>
    <Card className="border-l-4 border-l-emerald-500">
      <div class="p-6 flex items-center">
        <div class="bg-emerald-100 p-3 rounded-full mr-4">
          <svg
            class="h-6 w-6 text-emerald-600"
            fill="none"
            height="24"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            viewBox="0 0 24 24"
            width="24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <rect height="18" rx="2" ry="2" width="18" x="3" y="4"></rect>
            <line x1="16" x2="16" y1="2" y2="6"></line>
            <line x1="8" x2="8" y1="2" y2="6"></line>
            <line x1="3" x2="21" y1="10" y2="10"></line>
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Próxima Vacuna</p>
          <h3 class="text-lg font-bold">15 Mayo, 2025</h3>
        </div>
      </div>
    </Card>
    <Card className="border-l-4 border-l-amber-500">
      <div class="p-6 flex items-center">
        <div class="bg-amber-100 p-3 rounded-full mr-4">
          <svg
            class="h-6 w-6 text-amber-600"
            fill="none"
            height="24"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            viewBox="0 0 24 24"
            width="24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"
            ></path>
            <polyline points="14 2 14 8 20 8"></polyline>
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Certificados</p>
          <h3 class="text-2xl font-bold">2</h3>
        </div>
      </div>
    </Card>
    <Card className="border-l-4 border-l-blue-500">
      <div class="p-6 flex items-center">
        <div class="bg-blue-100 p-3 rounded-full mr-4">
          <svg
            class="h-6 w-6 text-blue-600"
            fill="none"
            height="24"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            viewBox="0 0 24 24"
            width="24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" x2="12" y1="8" y2="12"></line>
            <line x1="12" x2="12.01" y1="16" y2="16"></line>
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Alertas</p>
          <h3 class="text-2xl font-bold">1</h3>
        </div>
      </div>
    </Card>
  </div>

  <Card className="mb-8">
    <div class="bg-gradient-to-r from-sky-500 to-emerald-400 text-white p-4">
      <h2 class="text-xl font-bold">MIS VACUNAS</h2>
    </div>
    <div class="p-4">
      <Table>
        <thead>
          <tr>
            <th>Vacuna</th>
            <th>Fecha/Dosis</th>
            <th>Enfermedad prevenible</th>
            <th>Centro de salud</th>
            <th>Dosis</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="font-medium">COVID-19</td>
            <td>15/01/2023</td>
            <td>Coronavirus SARS-CoV-2</td>
            <td>Hospital Nacional</td>
            <td>2</td>
          </tr>
          <tr>
            <td class="font-medium">Influenza</td>
            <td>03/05/2024</td>
            <td>Gripe estacional</td>
            <td>Centro de Salud San Miguelito</td>
            <td>1</td>
          </tr>
          <tr>
            <td class="font-medium">Hepatitis B</td>
            <td>22/08/2022</td>
            <td>Hepatitis B</td>
            <td>Policlínica JJ Vallarino</td>
            <td>3</td>
          </tr>
          <tr>
            <td class="font-medium">Tétanos</td>
            <td>10/11/2021</td>
            <td>Tétanos</td>
            <td>Hospital Santo Tomás</td>
            <td>1</td>
          </tr>
        </tbody>
      </Table>
    </div>
  </Card>

  <div class="flex justify-end">
    <Button className="bg-sky-600 hover:bg-sky-700">
      Descargar Certificado
    </Button>
  </div>
</DashboardLayout>
