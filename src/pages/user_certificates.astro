---
import { Card } from "../components/ui/Card";
import DashboardLayout from "../layouts/DashboardLayout.astro";
import DownloadLogo from "../assets/logos/MaterialSymbolsDownload.svg";
import { base_url } from "../utils/url";
---

<DashboardLayout title="Panel Principal - Sistema de Vacunación de Panamá">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-sky-800 mb-2">
      Certificados de vacunación
    </h1>
    <p class="text-gray-600">Historial de descargas</p>
  </div>

  <Card className="mb-8">
    <div
      class="bg-gradient-to-r from-sky-500 to-emerald-400 text-white p-4 rounded-t-2xl"
    >
      <h2 class="text-xl font-bold">MIS CERTIFICADOS</h2>
    </div>
    <div class="p-4 overflow-x-auto">
      <table class="w-full table-auto text-sm">
        <thead class="bg-gray-100 text-gray-700">
          <tr>
            <th class="text-left py-3 px-4">Vacuna</th>
            <th class="text-center py-3 px-4">Fecha/Dosis</th>
            <th class="text-center py-3 px-4">Dosis</th>
            <th class="text-center py-3 px-4">Certificado</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <tr>
            <td class="py-2 px-4 font-medium text-left">COVID-19</td>
            <td class="py-2 px-4 text-center">15/01/2023</td>
            <td class="py-2 px-4 text-center">2</td>
            <td class="py-2 px-4 text-center">
              <a
                class="inline-flex items-center justify-center text-blue-600 hover:text-blue-800"
                href={base_url}
              >
                <DownloadLogo class="h-6 w-6" />
              </a>
            </td>
          </tr>
          <tr>
            <td class="py-2 px-4 font-medium text-left">Influenza</td>
            <td class="py-2 px-4 text-center">03/05/2024</td>
            <td class="py-2 px-4 text-center">1</td>
            <td class="py-2 px-4 text-center">
              <a
                class="inline-flex items-center justify-center text-blue-600 hover:text-blue-800"
                href={base_url}
              >
                <DownloadLogo class="h-6 w-6" />
              </a>
            </td>
          </tr>
          <tr>
            <td class="py-2 px-4 font-medium text-left">Hepatitis B</td>
            <td class="py-2 px-4 text-center">22/08/2022</td>
            <td class="py-2 px-4 text-center">3</td>
            <td class="py-2 px-4 text-center">
              <a
                class="inline-flex items-center justify-center text-blue-600 hover:text-blue-800"
                href={base_url}
              >
                <DownloadLogo class="h-6 w-6" />
              </a>
            </td>
          </tr>
          <tr>
            <td class="py-2 px-4 font-medium text-left">Tétanos</td>
            <td class="py-2 px-4 text-center">10/11/2021</td>
            <td class="py-2 px-4 text-center">1</td>
            <td class="py-2 px-4 text-center">
              <a
                class="inline-flex items-center justify-center text-blue-600 hover:text-blue-800"
                href={base_url}
              >
                <DownloadLogo class="h-6 w-6" />
              </a>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </Card>
</DashboardLayout>
